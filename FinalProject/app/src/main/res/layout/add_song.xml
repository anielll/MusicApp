<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#222222"
        android:padding="16dp">
        <Button
            android:id="@+id/add_song_mp3_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap to Choose \nMP3 File"
            android:textColor="#bbbbbb"
            android:textSize="24sp"
            android:backgroundTint="#444444"
            />
        <EditText
            android:id="@+id/add_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Song Title"
            android:textColor="@color/white"
            android:textColorHint="#bbbbbb"
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/add_song_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Artist"
            android:textColor="@color/white"
            android:textColorHint="#bbbbbb"
            android:textSize="24sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/add_song_cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#cc0000"
            android:layout_marginHorizontal="5dp"
            android:text="Cancel"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/add_song_save_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#009900"
            android:layout_marginHorizontal="5dp"
            android:text="Save"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>